# Database configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=bookstoredb
DB_USER=root
DB_PASSWORD=
DB_PARAMS=?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

# Spring / Flyway helpers (constructed from above)
SPRING_DATASOURCE_URL=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}${DB_PARAMS}
SPRING_DATASOURCE_USERNAME=${DB_USER}
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}
SPRING_FLYWAY_URL=${SPRING_DATASOURCE_URL}
SPRING_FLYWAY_USER=${DB_USER}
SPRING_FLYWAY_PASSWORD=${DB_PASSWORD}
